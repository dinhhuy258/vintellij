<idea-plugin>
    <id>com.dinhhuy258.vintellij</id>
    <name>vintellij</name>
    <vendor email="huy.duongdinh@gmail.com" url="https://github.com/dinhhuy258">
        Huy Duong
    </vendor>

    <description>
        The intellij plugin which is used as a language server protocol
    </description>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="201.6668"/>

    <!-- Enable plugin in all products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <application-components>
        <component>
            <implementation-class>com.dinhhuy258.vintellij.ComradeNeovimPlugin</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <appStarter implementation="com.dinhhuy258.vintellij.VIApplicationStarter"/>
        <applicationService serviceImplementation="com.dinhhuy258.vintellij.ComradeNeovimService"/>
        <preloadingActivity implementation="com.dinhhuy258.vintellij.lsp.VintellijLanguageServerPreloadingActivity"/>
    </extensions>

